<h1>To be invoiced</h1>

<table>
	<tr>
		<th><%= sortable "confirmation_date"%></th>
		<th><%= sortable "customer_name", "Customer name" %></th>
		<th><%= sortable "title" %></th>
		<th><%= sortable "sum" %></th>
		
	</tr>
<% @invoices.each do |invoice| %>
<tr class="<%= cycle("even", "odd", :name => "invoicables") -%>">
	<td><%= invoice.confirmation_date %></td>
	<td><%= invoice.customer.name %></td>
	<td><%= invoice.title %></td>
	<td><%= number_to_currency(invoice.sum, :locale => :fi) %></td>
</tr>	
<% end %>
<% reset_cycle("invoicables") %>
</table>

<p><u><b>Total invoicable:</b> <%= number_to_currency(@total, :locale => :fi)  %></u></p>