<script type="text/javascript">
   metrify.fire("Loaded the login page");
</script>


<h1>Login</h1>


<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email] %>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	<p class="button"><%= submit_tag "Log in!" %></p>
<% end %>
