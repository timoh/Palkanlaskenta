<%= form_for(@shift) do |f| %>
  <% if @shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
      <% @shift.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	Employee<br />
    <%= collection_select(:shift, :employee_id, Employee.all, :id, :print_name) %>
  </div>
  <div class="field">
	Employment (project) <br />
    <%= collection_select(:shift, :employment_id, Employment.all, :id, :print_employment) %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :break_duration %>, hours ("." is decimal separator)<br />
    <%= f.text_field :break_duration %>
  </div>
  <div class="field">
    <%= f.label :duration %>, hours ("." is decimal separator)<br />
    <%= f.text_field :duration %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
